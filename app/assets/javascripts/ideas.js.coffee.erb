$ ->
  $(".mytags").tagit
    availableTags: <%= Tag.all.map(&:name).to_json.html_safe %> ,
    singleField: true,
    singleFieldNode: $('#tag_list')

  $(".new_comment").hide()

  $("a.toggle_comment").click ->
    $("#comments").show()
    $("form").hide()
    element = $(this).parent().parent().find("form:first")
    element.show()
    top_element = element.parent().parent()
    $('html, body').animate
         scrollTop: top_element.offset().top
        , 1200

  $("a.unfold_comments").click ->
    $("#comments").toggle()
    if $(this).text().substr(0,2) != "Re"
      $(this).text("Replier les commentaires")
    else
      $(this).text("DÃ©plier les commentaires")


