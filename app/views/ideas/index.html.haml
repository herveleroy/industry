- sort_mode = @sort_mode.blank? ? "" : pluralize(@count, " et trié par "," et triés par ").gsub(/^\d+\s/, "") + @sort_mode
%h3.letterpress= pluralize(@count, "oeuf trouvé","oeufs trouvés") + sort_mode
.button-bar
  %ul.button-group.selection_sorting
    %li=link_to "Pertinence", "#" ,  :class => "tiny secondary button"
    %li=link_to "Score", "#",   :class => "tiny secondary button"
    %li=link_to "Date création", "#",   :class => "tiny secondary button"
.row
  .two.columns
    = form_tag( {:controller => 'ideas', :action => 'index'}, :method => 'get') do
      = text_field_tag :search, params[:search], :id => 'search_field', :placeholder => "Rechercher ..."
      - @tags.each do |tag|
        %label.tag
          = check_box_tag 'tags[]', tag, @selected_tags.include?(tag.to_s), :id => "search_tags_#{tag}", :class => "clickable_tag", :style => "display:none;"
          = Tag.find(tag).name
      %hr
      - @selected_tags.each do |tag|
        - unless @tags.include?(tag.to_i)
          = hidden_field_tag 'tags[]', tag, :id => "search_tags_#{tag}"
      - sorting_default = params[:sorting].blank? ? "@relevance" : params[:sorting]
      #button_sorting= hidden_field_tag 'sorting', "#{sorting_default}"
      = submit_tag "Rechercher", :name => nil, :class => "radius button"

      %h6.letterpress
        %i.general.foundicon-add-doc
        = link_to 'Nouvel oeuf', new_idea_path, :class => "letterpress"
      %h6.letterpress
        %i.accessibility.foundicon-key
        = link_to 'Ajouter un mot clé à la sélection', "#", :class => "letterpress", "data-reveal-id" => "add_tags"
      %h6.letterpress
        %i.general.foundicon-tools
        = link_to 'Muter la sélection en chenille', "#", :class => "letterpress"

  .ten.columns
    #container
      - @ideas.each do |idea|
        = render :partial => '/shared/idea', :object => idea
    .clear

    %br
    .apple_pagination_b
      = will_paginate @ideas, { :previous_label => 'Avant', :next_label => 'Après'}


- @ideas.each do |idea|
  %div{:id => "description_idea_#{idea.id}", :class =>"reveal-modal [expand, xlarge, large, medium, small]"}
    %h4.object_state
      %span= image_tag "eggs_small.png"
      %span.letterpress= "Oeuf #{idea.id}"
    %h6= link_to idea.title, idea
    %h4.letterpress Description
    = idea.description
    %hr
    %ul.inline-list.letterpress
      %a{:style => "padding-left: 10px"}
      %i.accessibility.foundicon-glasses
      = link_to "Voir la fiche et les commentaires", idea
    %a.close-reveal-modal &#215;

