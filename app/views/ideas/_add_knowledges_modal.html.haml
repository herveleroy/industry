= form_tag( {:controller => 'knowledges', :action => 'search'}, :method => 'get', :remote => true) do
  .row.collapse
    .nine.columns
      = text_field_tag :search, params[:search], :id => 'search_field'
    .three.columns
      = submit_tag "Rechercher", :name => nil, :class => "button expand postfix"
  = link_to_function "Clear", "$('search_field').clear()"
%p Résultats
#search_results
  = form_tag add_knowledges_idea_path, :method => :post, :remote => true do
    = hidden_field_tag("id", idea.id)
    %ul
    = submit_tag "Associer les savoirs sélectionnés", :class => "small success radius button"



