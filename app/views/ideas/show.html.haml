%p#notice= notice

.row
  .twelve.columns
    .panel.radius

      %h3.letterpress
        = @idea.title
      .row
        .two.columns
          = image_tag @idea.user.avatar.url(:medium)
          %p
            %b Auteur:
            = @idea.user.fullname
        .ten.columns
          %p
            %b Description:
            = @idea.description
          %br
          %ul.tagit
            - @idea.tag_list.each do |tag|
              %li.tag= link_to tag, "#"

.row
  .twelve.columns
    = link_to 'Editer', edit_idea_path(@idea)
    \|
    = link_to 'Retour Ã  la liste', ideas_path
