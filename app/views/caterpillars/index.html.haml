- sort_mode = @sort_mode.blank? ? "" : pluralize(@count, " et trié par "," et triés par ").gsub(/^\d+\s/, "") + @sort_mode
%h3.letterpress= pluralize(@count, "chenille trouvée","chenilles trouvées") + sort_mode
.button-bar
  %ul.button-group.selection_state
    %li=link_to "❙ ❙", "#", :class => "tiny secondary button"
    %li=link_to "▶", "#",  :class => "tiny secondary button"
  %ul.button-group.selection_state
    %li=link_to "✖", "#" ,  :class => "tiny secondary button"
    %li=link_to "✔", "#",   :class => "tiny secondary button"
  %ul.button-group.selection_sorting
    %li=link_to "Pertinence", "#" ,  :class => "tiny secondary button"
    %li=link_to "Score", "#",   :class => "tiny secondary button"
    %li=link_to "Date création", "#",   :class => "tiny secondary button"
.row
  .two.columns
    = form_tag( {:controller => 'caterpillars', :action => 'index'}, :method => 'get') do
      = text_field_tag :search, params[:search], :id => 'search_field', :placeholder => "Rechercher ..."
      - @tags.each do |tag|
        %label.tag
          = check_box_tag 'tags[]', tag, @selected_tags.include?(tag.to_s), :id => "search_tags_#{tag}", :class => "clickable_tag", :style => "display:none;"
          = Tag.find(tag).name
      %hr
      - @selected_tags.each do |tag|
        - unless @tags.include?(tag.to_i)
          = hidden_field_tag 'tags[]', tag, :id => "search_tags_#{tag}"
      - sorting_default = params[:sorting].blank? ? "@relevance" : params[:sorting]
      - state_default = params[:state].blank? ? "" : params[:state]
      #button_state= hidden_field_tag 'state', "#{state_default}"
      #button_sorting= hidden_field_tag 'sorting', "#{sorting_default}"
      = submit_tag "Rechercher", :name => nil, :class => "radius button"

      %h6.letterpress
        %i.general.foundicon-add-doc
        = link_to 'Nouvelle chenille', new_caterpillar_path, :class => "letterpress"
  .ten.columns
    #container

      - @caterpillars.each do |caterpillar|
        = render :partial => '/shared/caterpillar', :object => caterpillar

    .clear
    %br
    .apple_pagination_b
      = will_paginate @caterpillars, { :previous_label => 'Avant', :next_label => 'Après'}
    %br

- @caterpillars.each do |caterpillar|
  %div{:id => "description_caterpillar_#{caterpillar.id}", :class =>"reveal-modal [expand, xlarge, large, medium, small]"}
    = render :partial => "shared/caterpillar_modal", :locals => {:caterpillar => caterpillar}
    %a.close-reveal-modal &#215;

