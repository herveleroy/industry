= form_tag add_tags_chrysalis_path, :method => :post, :remote => true do
  = hidden_field_tag( "new_tag_id", "")
  %label Mots clés
  %ul#thetags

  = submit_tag "Ajouter les mots clés à la sélection", :class => "small success radius button"

  - tags_names = Tag.all.map{|t| t.name}
  #available_tags{ "data-url" => "#{tags_names}" }


:javascript
  var array = $('#available_tags').data('url');
  $("#thetags").tagit({
    availableTags: array,
    singleField: true,
    showAutocompleteOnFocus: true
    });

